DESCRIPTION="OpenEXR image viewer"
HOMEPAGE="http://www.openexr.com/"
SRC_URI="http://savannah.nongnu.org/download/openexr/${P}.tar.gz"
SRC_DIR="${P%[a-z]}"

PATCH_URI="1.0.2-gcc45.patch"

DIFF_EXCLUDES="OpenEXR_ViewersConfig.h"

NO_AUTOHEADER=1

src_install() {
	cd ${B}
	cyginstall docdir=/usr/share/doc/${PN}
	make_desktop_entry "exrdisplay %f" "OpenEXR Viewer" "" "Graphics;Viewer" "" "NoDisplay=true" "MimeType=image/x-exr;"
	# no reason to ship headers
	rm -fr ${D}/usr/include/
}
